{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "dependencyDashboard": true,
  "schedule": ["* 0-5 * * *"],
  "automergeSchedule": ["* 0-5 * * *"],
  "packageRules": [
    {
      "schedule": ["* 0-5 * * *"],
      "groupName": null,
      "matchPackagePatterns": ["*"]
    },
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "schedule": ["* 0-5 * * *"],
      "groupName": null,
      "automerge": true
    }
  ]
}